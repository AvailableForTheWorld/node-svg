{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "moduleResolution": "node",
    "paths": {
      "@node-svg/shared": ["./packages/shared"],
      "@node-svg/shared/*": ["./packages/shared/*"]
    }
  }
}
