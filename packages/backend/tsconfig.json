{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "../../",
        "module": "ESNext",
        "moduleResolution": "Node",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "../shared" }]
}
